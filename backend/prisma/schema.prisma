generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  OWNER
  MANAGER
  TESTER
  APPROVER
}

model User {
  id             Int               @id @default(autoincrement())
  name           String
  email          String            @unique
  password       String
  createdAt      DateTime          @default(now())
  userProjects   UserOnProject[]
  executions     Execution[]
}

model Project {
  id           Int               @id @default(autoincrement())
  name         String
  description  String?
  createdAt    DateTime          @default(now())
  testCases    TestCase[]
  userProjects UserOnProject[]
}

model UserOnProject {
  id         Int      @id @default(autoincrement())
  userId     Int
  projectId  Int
  role       Role
  user       User     @relation(fields: [userId], references: [id])
  project    Project  @relation(fields: [projectId], references: [id])

  @@unique([userId, projectId])
}

model TestCase {
  id           Int        @id @default(autoincrement())
  title        String
  description  String?
  precondition String?
  steps        String
  expected     String
  projectId    Int
  project      Project    @relation(fields: [projectId], references: [id])
  executions   Execution[]
  evidences    Evidence[]
  createdAt    DateTime   @default(now())
}

model Execution {
  id         Int       @id @default(autoincrement())
  status     String
  executedAt DateTime  @default(now())
  userId     Int
  user       User      @relation(fields: [userId], references: [id])
  testCaseId Int
  testCase   TestCase  @relation(fields: [testCaseId], references: [id])
}

model Evidence {
  id         Int       @id @default(autoincrement())
  url        String
  type       String
  testCaseId Int
  testCase   TestCase  @relation(fields: [testCaseId], references: [id])
}
